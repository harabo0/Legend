clear
banner(){
echo -e "\e[32m"
echo "██████╗ ██╗███╗   ███╗ █████╗  ██████╗ "
echo "██╔══██╗██║████╗ ████║██╔══██╗██╔═══██╗"
echo "██████╔╝██║██╔████╔██║███████║██║   ██║"
echo "██╔═══╝ ██║██║╚██╔╝██║██╔══██║██║   ██║"
echo "██║     ██║██║ ╚═╝ ██║██║  ██║╚██████╔╝"
echo "╚═╝     ╚═╝╚═╝     ╚═╝╚═╝  ╚═╝ ╚═════╝ "
